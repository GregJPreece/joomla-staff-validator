<?xml version="1.0" encoding="utf-8" ?>
<form>
    <fieldset name="validate"
              addrulepath="components/com_staffvalidator/models/rules">
        <field  name="code" 
                type="text"
                size="12"
                maxlength="10"
                required="true"
                validate="code"
                pattern="[a-zA-Z0-9]{4,10}"
                class="text_area validate-code"
                message="COM_STAFFVALIDATOR_FIELD_CODE_VALUE_ERR"
                label="COM_STAFFVALIDATOR_FIELD_CODE_VALIDATE_LABEL"
                description="COM_STAFFVALIDATOR_FIELD_CODE_VALIDATE_DESC"
                hint="COM_STAFFVALIDATOR_FIELD_CODE_VALIDATE_DESC" />
    </fieldset>
</form>